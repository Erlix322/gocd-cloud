{
  "variables": {
    "gocd_version": "",
    "instance_type": "c5.large"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "us-east-1",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "amzn-ami-hvm-*-x86_64-gp2",
          "root-device-type": "ebs"
        },
        "owners": ["137112412989"],
        "most_recent": true
      },
      "ami_groups": "all",
      "instance_type": "{{user `instance_type`}}",
      "ssh_username": "ec2-user",
      "ami_name": "GoCD Server {{user `gocd_version`}}",
      "spot_price": "auto",
      "spot_price_auto_product": "Linux/UNIX (Amazon VPC)",
      "tags": {
        "GoCD-Version": "{{user `gocd_version`}}",
        "Name": "GoCD Server {{user `gocd_version`}}"
      },
      "snapshot_tags": {
        "GoCD-Version": "{{user `gocd_version`}}",
        "Name": "GoCD Server {{user `gocd_version`}}",
        "Type": "server"
      },
      "ami_regions": [
        "ap-south-1",
        "eu-west-2",
        "eu-west-1",
        "ap-northeast-2",
        "ap-northeast-1",
        "sa-east-1",
        "ca-central-1",
        "ap-southeast-1",
        "ap-southeast-2",
        "eu-central-1",
        "us-east-1",
        "us-east-2",
        "us-west-1",
        "us-west-2"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo yum update -y",
        "sudo yum install -y java-1.8.0-openjdk-headless git mercurial subversion openssh-clients bash wget",
        "sudo yum remove -y java-1.7.0-openjdk",
        "sudo wget -q https://download.gocd.io/gocd.repo -O /etc/yum.repos.d/gocd.repo",
        "sudo yum install -y go-server",
        "sudo yum clean all"
      ]
    }
  ]
}
